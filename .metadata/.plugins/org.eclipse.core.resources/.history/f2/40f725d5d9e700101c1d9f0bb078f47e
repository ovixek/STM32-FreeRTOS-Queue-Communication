/* USER CODE BEGIN 0 */


void led(void *parameter)
{
	portTickType tick = xTaskGetTickCount();
	while(1)
	{
		HAL_GPIO_WritePin(GPIOD, GPIO_PIN_12, GPIO_PIN_SET);
				HAL_Delay(2000);
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_12, GPIO_PIN_RESET);
				HAL_Delay(2000);
		vTaskDelayUntil(&tick, 2000/portTICK_PERIOD_MS);
	}
	vTaskDelete(NULL);
}

void sender(void *parameter)
{
	portTickType tick =xTaskGetTickCount();
	while(1)
	{	 for(int i=0;i<6;i++)
		{



        int value=rand() % 10000;
			xQueueSendToBack(xQueue, &value, portMAX_DELAY);

//			char str[100];
//						sprintf(str,"value = %d \r\n",value);
//						HAL_UART_Transmit(&huart2, (uint8_t *)str, strlen(str), HAL_MAX_DELAY);

		}

   vTaskDelayUntil(&tick, 2000 / portTICK_RATE_MS);
	}

	vTaskDelete(NULL);

}

void receiver(void *parameter)
{
	portTickType tick =xTaskGetTickCount();

	while(1)
	{

		 uint16_t arr[6];

		 for(int i=0;i<6;i++)
		 {

			xQueueReceive(xQueue,&arr[i], portMAX_DELAY);
		 }
		 	 	 int target = arr[0];
		 		int rank=0;
		 		for(int i=0;i<=4;i++)
		 		{
		 			if(arr[i]<=target)
		 				rank++;

		 		}



		 xQueueSendToBack(xQueue1,&rank,portMAX_DELAY);

		 vTaskDelayUntil(&tick,1000/portTICK_PERIOD_MS);
	}

	vTaskDelete(NULL);
}

void rank_show_led(void *parameter)
{
	portTickType tick = xTaskGetTickCount();
	int rank = 0;

	while (1)
	{
		xQueueReceive(xQueue1, &rank, portMAX_DELAY);

		// Reset all LEDs first
		HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, RESET);
		HAL_GPIO_WritePin(GPIOD, GPIO_PIN_14, RESET);
		HAL_GPIO_WritePin(GPIOD, GPIO_PIN_15, RESET);

		// Light up LEDs based on rank
		switch(rank)
		{
			case 1:
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, SET);
				break;

			case 2:
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_14, SET);
				break;

			case 3:
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, SET);
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_14, SET);
				break;

			case 4:
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_15, SET);
				break;

			case 5:
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, SET);
				HAL_GPIO_WritePin(GPIOD, GPIO_PIN_15, SET);
				break;

			default:
				// If invalid rank, turn off all
				break;
		}

		// Send rank over UART
		char str[100];
		sprintf(str, "rank = %d \r\n", rank);
		HAL_UART_Transmit(&huart2, (uint8_t *)str, strlen(str), HAL_MAX_DELAY);

		// Delay 1 second using FreeRTOS
		vTaskDelayUntil(&tick, 1000 / portTICK_PERIOD_MS);
	}

	vTaskDelete(NULL); // Optional, unreachable
}

